<UserControl x:Class="Arthur.View.Account.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arthur.View.Account"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="450">
    <Grid Background="#B2000000">
        <StackPanel Margin="70,15,70,20">
            <Label Content="烯晶碳能" FontSize="30" HorizontalAlignment="Center" Foreground="White"/>
            <TextBox x:Name="username" Text="输入用户名" FontSize="20" Height="35" VerticalAlignment="Center" Margin="0,10,0,10" VerticalContentAlignment="Center" GotFocus="Input_GotFocus"/>
            <PasswordBox x:Name="password" FontSize="20" Height="35"  Margin="0,15,0,10" VerticalContentAlignment="Center" GotFocus="Input_GotFocus"/>
            <CheckBox Content="记住密码" FontSize="14" Height="20"  Margin="0,15,0,10" Foreground="White"/>
            <Button x:Name="btnLogin" Content="登 录" Height="35" FontSize="20" Background="#FF367BB5" Foreground="White" Click="btnLogin_Click"/>
            <Label x:Name="lbTip" Content="" FontSize="12" Foreground="red" Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</UserControl>
